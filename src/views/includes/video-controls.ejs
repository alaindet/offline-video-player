<%#
# Variables
- ?prevVideoPath
- ?nextVideoPath
#%>
<aside class="video-controls">

  <!-- Menu -->
  <button class="full-width btn btn-default" id="menu-open">
    Open menu
  </button>

  <!-- Home -->
  <a href="/" class="full-width btn btn-default">
    Home
  </a>

  <!-- Playback -->
  <div class="playback-controls">
    <button class="btn btn-default full-width" id="playback-slower">-</button>
    <button class="btn btn-default full-width" id="playback-reset">1.00x</button>
    <button class="btn btn-default full-width" id="playback-faster">+</button>
  </div>

  <!-- Bookmark -->
  <form
    method="post"
    action="/video/<%= video.urlPath %>/bookmark"
    class="full-width"
  >
    <button type="submit" class="full-width bookmark-control btn btn-default">
      Boomark
    </button>
  </form>

  <!-- Download progress -->
  <a href="/progress" class="full-width btn btn-default">
    Export&nbsp;progress
  </a>

  <!-- Prev -->
  <% if (prevVideoPath) { %>
    <a href="/video/<%= prevVideoPath %>" class="full-width btn btn-default">
      Prev
    </a>
  <% } %>

  <!-- Next -->
  <% if (nextVideoPath) { %>
    <a href="/video/<%= nextVideoPath %>" class="full-width btn btn-default">
      Next
    </a>
  <% } %>

</aside>
