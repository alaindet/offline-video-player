<%#
# Variables
- ?prevVideoPath
- ?nextVideoPath
#%>
<aside class="video-controls">

  <!-- Menu -->
  <button class="full-width btn btn-default" id="menu-open">
    Open menu
  </button>

  <!-- Home -->
  <a href="/" class="full-width btn btn-default">
    Home
  </a>

  <!-- Playback -->
  <div class="inline-buttons">
    <button class="btn btn-default full-width" id="playback-slower">-</button>
    <button class="btn btn-default full-width" id="playback-reset">1.00x</button>
    <button class="btn btn-default full-width" id="playback-faster">+</button>
  </div>

  <!-- Bookmark -->
  <button class="full-width btn btn-default" id="bookmark">
    Bookmark
  </button>

  <!-- Mark as seen -->
  <button class="full-width btn btn-default" id="mark-as-seen">
    Mark&nbsp;as&nbsp;seen
  </button>

  <!-- Download progress -->
  <a href="/progress" class="full-width btn btn-default">
    Export&nbsp;progress
  </a>

  <div class="inline-buttons">

    <!-- Prev -->
    <a
      href="/video/<%= prevVideoPath %>"
      class="full-width btn btn-default"
      <%= !prevVideoPath ? 'disabled' : '' %>
    >Prev</a>

    <!-- Next -->
    <a
      href="/video/<%= nextVideoPath %>"
      class="full-width btn btn-default"
      <%= !nextVideoPath ? 'disabled' : '' %>
    >Next</a>

  </div>

</aside>
